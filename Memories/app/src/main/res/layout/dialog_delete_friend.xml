<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#FEFBFB"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginTop="10dp"
            android:src="@drawable/garbage"
            android:layout_centerHorizontal="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/tmpImg"/>

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tmpImg"
            android:textColor="#d8c8c8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete this person?"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:background="@null"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/delPersonYesBtn"
                android:text="yes"
                android:background="@drawable/squareborder"
                android:layout_weight="1"
                android:textColor="#d8c8c8"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/delPersonNoBtn"
                android:background="@drawable/squareborder"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textColor="#d8c8c8"
                android:text="no"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>