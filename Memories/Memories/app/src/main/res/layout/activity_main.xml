<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_cal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/materialCalendarView">

        <ImageView
            android:id="@+id/main_month"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_days"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/main_month"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/main_sun"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="일"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/main_mon"/>
            <TextView
                android:id="@+id/main_mon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="월"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toEndOf="@+id/main_sun"
                app:layout_constraintEnd_toStartOf="@id/main_tue"/>
            <TextView
                android:id="@+id/main_tue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="화"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toEndOf="@+id/main_mon"
                app:layout_constraintEnd_toStartOf="@+id/main_wed"/>
            <TextView
                android:id="@+id/main_wed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="수"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toEndOf="@+id/main_tue"
                app:layout_constraintEnd_toStartOf="@+id/main_thur"/>
            <TextView
                android:id="@+id/main_thur"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="목"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toEndOf="@+id/main_wed"
                app:layout_constraintEnd_toStartOf="@+id/main_fri"/>
            <TextView
                android:id="@+id/main_fri"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="금"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toEndOf="@+id/main_thur"
                app:layout_constraintEnd_toStartOf="@+id/main_sat"/>
            <TextView
                android:id="@+id/main_sat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="토"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toEndOf="@+id/main_fri"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/materialCalendarView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="10dp"
        app:layout_constraintVertical_weight="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_cal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:mcv_weekDayTextAppearance="@style/CalendarDays" />
