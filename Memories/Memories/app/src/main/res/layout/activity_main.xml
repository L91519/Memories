<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019년 12월 15"
        android:id="@+id/main_date"
        android:textSize="25dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/main_date">
        <TextView
            android:id="@+id/main_sunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/main_monday"
            app:layout_constraintHorizontal_weight="1"
            android:text="SUN"
            app:layout_constrainedWidth="true"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/main_monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/main_sunday"
            app:layout_constraintRight_toLeftOf="@id/main_tuesday"
            app:layout_constraintHorizontal_weight="1"
            android:text="MON"
            app:layout_constrainedWidth="true"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/main_tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/main_monday"
            app:layout_constraintRight_toLeftOf="@id/main_wednesday"
            app:layout_constraintHorizontal_weight="1"
            android:text="TUE"
            app:layout_constrainedWidth="true"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/main_wednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/main_tuesday"
            app:layout_constraintRight_toLeftOf="@id/main_thursday"
            app:layout_constraintHorizontal_weight="1"
            android:text="WED"
            app:layout_constrainedWidth="true"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/main_thursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/main_wednesday"
            app:layout_constraintRight_toLeftOf="@id/main_friday"
            app:layout_constraintHorizontal_weight="1"
            android:text="THU"
            app:layout_constrainedWidth="true"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/main_friday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/main_thursday"
            app:layout_constraintRight_toLeftOf="@+id/main_saturday"
            app:layout_constraintHorizontal_weight="1"
            android:text="FRI"
            app:layout_constrainedWidth="true"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/main_saturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/main_friday"
            app:layout_constraintRight_toRightOf="parent"
            android:text="SAT"
            app:layout_constrainedWidth="true"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/calendatRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_days" />

</androidx.constraintlayout.widget.ConstraintLayout>